	},
	"scripts": {
		"start": "tsc -p engine/ && npm run webpack:dev && npm run electron & npm run test",
		"dev": "tsc -p engine/ -w & npm run webpack:dev-watch & npm run watch:wds",
		"webpack:dev": "webpack --mode development --config ./engine/webpack.config.js",
		"webpack:dev-watch": "webpack --mode development --watch --config ./engine/webpack.config.js",
		"watch:wds": "webpack-dev-server --mode development --config ./engine/wds.config.js",
		"npm_check_updates": "ncu",
		"npm_check_updates -g": "ncu -g",
		"npm_check_updates_do": "ncu -a && npm update && npm i -D",
		"electron": "electron ./",
		"build": "npm run webpack:pro && npm run build:package",
		"webpack:pro": "webpack --mode production --config ./engine/webpack.config.js",
		"build:package": "node build.js",
		"test-simple": "mocha --opts engine/tst/mocha.opts",
		"test": "istanbul cover _mocha -- --opts engine/tst/mocha.opts",
		"test-cov": "istanbul cover --print both _mocha -- engine/tmp/*.js --require intelli-espower-loader",
		"posttest": "cd coverage && remap-istanbul -i coverage.json -o html-report -t html"
	},
	"repository": {
		"type": "git",
		"url": "git+ssh://git@github.com/famibee/SKYNovel.git"
	},
	"bugs": {
		"url": "https://github.com/famibee/SKYNovel/issues",
